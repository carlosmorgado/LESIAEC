<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="com.example.android.cccportable.Cancioneiros">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <Button
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="Cancioneiro Actual"
                android:onClick="IndiceCancioneiroActual"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#000000"
                android:id="@+id/cancioneiroActual"
                android:layout_marginLeft="20dp"
                android:textStyle="bold|italic"
                android:visibility="gone"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:id="@+id/pdf_cancioneiroActual"
                android:text="PDF!"
                android:onClick="Abrir1"
                android:visibility="gone"
                />
            <Button
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:text="Cancioneiro Antigo"
                android:onClick="IndiceCancioneiroAntigo"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:background="#000000"
                android:id="@+id/cancioneiroAntigo"
                android:layout_marginLeft="20dp"
                android:textStyle="bold|italic"
                android:visibility="gone"/>
            <Button
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:background="#FFFFFF"
                android:padding="16dp"
                android:id="@+id/pdf_cancioneiroAntigo"
                android:text="PDF!"
                android:onClick="Abrir2"
                android:visibility="gone"
                />
        </LinearLayout>

    </LinearLayout>
    </ScrollView>